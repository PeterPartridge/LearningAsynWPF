<Window x:Class="LearningAsynWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningAsynWPF"
        xmlns:Control="clr-namespace:ReliableWPFApplication.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="RssButton" Height="30" Click="RssButton_Click">DOWNLOAD RSS</Button>
        <Control:BusyIndicator x:Name="BusyIndicator" Visibility="Hidden" Margin="200 0"
                               Width="20" Height="20"/>
        <Button x:Name="CounterButton" Height="30" Grid.Row="1" Click="CounterButton_Click">INCREASE COUNTER</Button>
        <TextBlock x:Name="CounterText" Grid.Row="2" Height="30">Counter:</TextBlock>
        <TextBlock x:Name="RssText" Grid.Row="3" Height="200">RSS</TextBlock>
    </Grid>
</Window>
